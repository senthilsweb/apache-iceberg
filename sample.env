# Source Configuration
ICE_SOURCE_PATH=https://example.com/data.csv  # URL, file path, or directory
ICE_GLOB_PATTERN=*.csv  # Glob pattern for directories (optional)
ICE_TABLE_NAME=  # Optional - derived from filename if empty

# Table Naming Options
ICE_PLURALIZE_TABLE=false  # true to pluralize table names (users.csv â†’ users)
ICE_GLOB_MERGE_TABLE=false  # true to merge glob files into single table

# Catalog Configuration
ICE_CATALOG_TYPE=rest  # Options: rest (Nessie), sql (SQLite)
ICE_NAMESPACE=default

# Nessie REST Catalog
ICE_NESSIE_URI=http://localhost:19120/iceberg/
ICE_WAREHOUSE_PATH=s3://your-bucket/warehouse

# SQLite Catalog (for local development)
ICE_CATALOG_DB_PATH=./iceberg_catalog.db

# S3-Compatible Storage
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com
R2_ACCESS_KEY=your-access-key
R2_SECRET_KEY=your-secret-key
R2_REGION=auto
